{% block body %}
	{% block meta %}
		<link rel="stylesheet" href="{{ assetsPath('css/spryker-ai-category-suggestion-product-management-ai.css') }}"/>
		<script src="{{ assetsPath('js/spryker-ai-category-suggestion-product-management-ai.js') }}"></script>
	{% endblock %}

	{% block popover %}
		<dialog popover id="ai-category-modal" class="ai-category-modal modal-popover">
			{% block modal %}
				<div class="modal">
					<div class="modal-dialog">
						<div class="modal-content">
							{% block header %}
								<div class="modal-header">
									<button type="button" class="close" popovertarget="ai-category-modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
									<h4 class="modal-title">{{ 'AI assistant' | trans }}</h4>
								</div>
							{% endblock %}

							{% block content %}
								<div class="modal-body js-modal-body">
									{% block loading %}
										<div class="ai-category-modal__loading">
											<span>{{ 'Looking for categories' | trans }}</span>
											<span class="fa fa-spinner fa-spin"></span>
										</div>
									{% endblock %}

									{% block empty %}
										<span class="text-center ai-category-modal__empty">{{ 'Please fill in the product name and description for at least one locale' | trans }}</span>
									{% endblock %}

									{% block preview %}
										<div class="ai-category-modal__select">
											<select multiple dropdown-parent=".js-modal-body" class="js-ai-category-select spryker-form-select2combobox"></select>
										</div>
									{% endblock %}
								</div>
							{% endblock %}

							{% block footer %}
								<div class="modal-footer ai-category-modal__actions">
									{% block actions %}
										<div class="modal-actions">
											<button type="button" class="js-ai-category-again btn btn-outline btn-view">{{ 'Try again' | trans }}</button>
											<button type="button" popovertarget="ai-category-modal" class="js-ai-category-apply btn">{{ 'Apply' | trans }}</button>
										</div>
									{% endblock %}
								</div>
							{% endblock %}
						</div>
					</div>

					<button type="button" tabindex="-1" popovertarget="ai-category-modal" class="modal-backdrop"></button>
				</div>
			{% endblock %}
		</dialog>
	{% endblock %}
{% endblock %}
